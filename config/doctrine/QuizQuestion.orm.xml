<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    <entity name="App\Domain\Entity\QuizQuestion"
            repository-class="App\DataAccessLayer\Repository\QuizQuestionRepository"
            table="quiz_question">
        <id name="id" type="uuid" column="id">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="doctrine.uuid_generator"/>
        </id>

        <field name="title" type="text">
            <options>
                <option name="default">Untitled Question</option>
            </options>
        </field>
        <field name="question" type="text"/>
        <field name="order" type="integer" column="`order`">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <one-to-many field="answers"
                     target-entity="App\Domain\Entity\QuizAnswer"
                     mapped-by="question">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <order-by>
                <order-by-field name="order"/>
            </order-by>
        </one-to-many>

        <field name="createdAt" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime">
            <gedmo:timestampable on="update"/>
        </field>
    </entity>
</doctrine-mapping>
